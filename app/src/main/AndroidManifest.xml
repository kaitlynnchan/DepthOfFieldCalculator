        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.CalculateDepthOfFieldActivity"
            android:label="@string/activity_calculate_depth_of_field_name">
